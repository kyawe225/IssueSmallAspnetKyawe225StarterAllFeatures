@page "/404"
@page "/not-found"

<PageTitle>Page Not Found</PageTitle>

<div class="not-found-container">
    <div class="not-found-content">
        <div class="error-animation">
            <div class="error-number">
                <span class="digit">4</span>
                <span class="digit">0</span>
                <span class="digit">4</span>
            </div>
            <div class="error-glitch"></div>
        </div>

        <div class="error-message">
            <h2 class="error-title">Oops! Page Not Found</h2>
            <p class="error-description">
                The page you're looking for doesn't exist or has been moved to another location.
                Don't worry, it happens to the best of us!
            </p>
        </div>

        <div class="error-actions">
            <button class="btn btn-primary btn-lg me-3" @onclick="GoHome">
                <i class="bi bi-house-fill"></i>
                Go Home
            </button>
            <button class="btn btn-outline-secondary btn-lg" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i>
                Go Back
            </button>
        </div>

        <div class="helpful-links mt-4">
            <h5>Maybe you're looking for:</h5>
            <div class="quick-links">
                <a href="/" class="quick-link">
                    <i class="bi bi-house"></i> Home
                </a>
                <a href="/issues" class="quick-link">
                    <i class="bi bi-card-list"></i> Issues
                </a>
                <a href="/issues/create" class="quick-link">
                    <i class="bi bi-plus-circle"></i> Create Issue
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .not-found-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

    .not-found-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
        animation: float-bg 20s linear infinite;
    }

    @@keyframes float-bg {
        0% { transform: translateX(0) translateY(0); }
        100% { transform: translateX(-60px) translateY(-60px); }
    }

    .not-found-content {
        text-align: center;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        padding: 3rem;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        max-width: 600px;
        width: 100%;
        position: relative;
        z-index: 1;
    }

    .error-animation {
        position: relative;
        margin-bottom: 2rem;
    }

    .error-number {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .digit {
        font-size: 6rem;
        font-weight: 900;
        background: linear-gradient(45deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        animation: bounce 2s ease-in-out infinite;
    }

    .digit:nth-child(1) {
        animation-delay: 0s;
    }

    .digit:nth-child(2) {
        animation-delay: 0.1s;
    }

    .digit:nth-child(3) {
        animation-delay: 0.2s;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0) scale(1);
        }
        40% {
            transform: translateY(-10px) scale(1.05);
        }
        60% {
            transform: translateY(-5px) scale(1.02);
        }
    }

    .error-glitch {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 100px;
        background: linear-gradient(45deg, rgba(255, 0, 0, 0.1), rgba(0, 255, 255, 0.1));
        border-radius: 50%;
        animation: glitch 3s ease-in-out infinite;
        z-index: -1;
    }

    @@keyframes glitch {
        0%, 100% {
            opacity: 0;
            transform: translateX(-50%) scale(0.8);
        }
        50% {
            opacity: 0.3;
            transform: translateX(-50%) scale(1.2);
        }
    }

    .error-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 2.5rem;
    }

    .error-description {
        color: #6c757d;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        max-width: 450px;
        margin-left: auto;
        margin-right: auto;
    }

    .error-actions {
        margin-bottom: 2rem;
    }

    .btn {
        border-radius: 50px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .btn-primary {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border-color: transparent;
    }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
        background: transparent;
    }

    .btn-outline-secondary:hover {
        background: #6c757d;
        color: white;
    }

    .helpful-links h5 {
        color: #495057;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .quick-links {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .quick-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
        text-decoration: none;
        border-radius: 25px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 1px solid rgba(102, 126, 234, 0.2);
    }

    .quick-link:hover {
        background: rgba(102, 126, 234, 0.2);
        color: #5a67d8;
        text-decoration: none;
        transform: translateY(-1px);
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .not-found-content {
            padding: 2rem;
            margin: 1rem;
        }

        .digit {
            font-size: 4rem;
        }

        .error-title {
            font-size: 2rem;
        }

        .error-description {
            font-size: 1rem;
        }

        .btn {
            padding: 0.5rem 1.5rem;
            font-size: 0.9rem;
        }

        .error-actions {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }

        .quick-links {
            flex-direction: column;
            align-items: center;
        }
    }

    /* Dark theme support */
    @@media (prefers-color-scheme: dark) {
        .not-found-content {
            background: rgba(33, 37, 41, 0.95);
            color: #e9ecef;
        }

        .error-title {
            color: #f8f9fa;
        }

        .error-description {
            color: #ced4da;
        }

        .helpful-links h5 {
            color: #e9ecef;
        }
    }
</style>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;

    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    private async Task GoBack()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("history.back");
        }
        catch
        {
            Navigation.NavigateTo("/");
        }
    }
}